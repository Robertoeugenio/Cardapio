                android:textSize="30sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/desc5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_marginRight="50dp"
